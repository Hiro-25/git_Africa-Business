@charset "UTF-8";

* {
  box-sizing: border-box; }

body {
  color: #000;
  text-align: center;
  font-size: 0.8rem; }

.header {
  padding: 170px 30px 80px;
  height: 100vh;
  background-image: url(<%= asset_path('waterfall.jpg') %>);
  background-color:rgba(255,255,255,0.3);
  background-blend-mode:lighten; }
  
h1{
    color: navy;
}

h3{
    colar: #000;
}

h4{
    colar: navy;
}

.site-title-sub {
  margin: 0 0 30px;
  letter-spacing: 1px;
  font-size: 1.2rem; }
  
.site-title-sub {
    color: gray;
}

.site-title {
  margin: 50px;
  font-size: 4.5rem; }

.site-description {
  margin-bottom: 50px;
  color: #888; }

.buttons {
  display: flex;
  justify-content: center;
  margin: 0 auto; }

.button {
  width: 200px;
  padding: 20px;
  margin: 10px;
  border-radius: 4px;
  background-color: #afa58d;
  color: #fff;
  text-decoration: none;
  letter-spacing: 1px;
  font-size: 0.7rem; }

.button:hover {
  opacity: 0.9; }

.button-orange {
  background-color: #f1b400; }

.about {
  height: 100vh;
  background-color:rgba(255,255,255,0.3);
  background-blend-mode:lighten; }

.button-image {
  height: 500vh;
  width: 500vw;
}

.knowledges {
  height: 100vh;
  background-image: url(<%= asset_path('construction.jpg') %>);
  background-color:rgba(255,255,255,0.3);
  background-blend-mode:lighten; }

.contact {
  height: 30vh;
  background-color: rgba(255,255,255,0.5);
  background-blend-mode:lighten; }
  
.contents.row {
  height: 50%;
  width: 50%;
  margin: 100px;
  padding:100px;
  box-shadow:0 0 10px rgba(41, 41, 41, 0.2);
  background-color: white;
}



