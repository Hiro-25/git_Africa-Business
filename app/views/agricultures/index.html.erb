<header class="login">
    <% if user_signed_in? %>
      <div class="user_nav grid-6">
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        <%= link_to "POST", "/agricultures/new", class: "post" %>
      </div>
    <% else %>
      <div class="grid-6">
        <%= link_to "Login", new_user_session_path, class: "post" %>
        <%= link_to "New Registar", new_user_registration_path, class: "post" %>
      </div>
    <% end %>
 </header>

<div class="contents">
    <% @agricultures.each do |agriculture| %>
      <div class="contents row" style="background-image: url(<%= agriculture.image %>);">
        <%= agriculture.text%>
        <span class="name"><%= agriculture.name %></span>
      </div>
    <% end %>
</div>

