<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @art.image %>);">
    <% if user_signed_in? && current_user.id == @art.user_id %>
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to 'Edit', "/arts/#{@art.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to 'Delete', "/arts/#{@art.id}", method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <%= simple_format(@art.text) %>
    <span class="name">
      <a href="/users/<%= @art.user_id %>">
        <span>Poster</span><%= @art.user_id %>
      </a>
    </span>
  </div>
  <div class="container"> 
    <% if current_user %>
      <%= form_tag("/arts/#{@art.id}/comments", method: :post) do %>
        <textarea name="text" placeholder="Comment" rows="2" cols="30"></textarea>
        <input type="submit" value="SEND">
      <% end %>
    <% end %>
  </div>
</div>