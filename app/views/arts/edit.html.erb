<div class="contents row">
  <%= form_tag("/arts/#{@art.id}", method: :patch ) do %>
    <h3>
      Edit
    </h3>
    <input type="text" name="image" value="<%= @art.image %>" placeholder="Image Url" autofocus="true">
    <textarea name="text" placeholder="text" rows="10" cols="30"><%= @art.text %></textarea>
    <input type="submit" value="SEND">
  <% end %>
</div>