<div class="contents">
    <%= link_to "POST", "/arts/new", class: "post" %>
    <% @arts.each do |art| %>
      <div class="contents row" style="background-image: url(<%= art.image %>);">
        <% if user_signed_in? && current_user.id == art.user_id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            li>
              <%= link_to 'Edit', "/arts/#{art.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to 'Delete', "/arts/#{art.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        <%= art.text%>
        <span class="name"><%= art.name %></span>
      </div>
    <% end %>
    <%= paginate(@arts) %>
</div>